@using SmartManager.Models.Students;
@model IQueryable<Student>
<!DOCTYPE html>
<html lang="en">
<head>
</head>
<body>

    @{
        ViewData["Title"] = "GetStudents";
    }
    <style>
        .btn-md-custom {
            padding: 0.3rem 0.75rem;
            font-size: 1rem;
        }
    </style>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-dark">Student List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Student" asp-action="GetStudents" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> &nbsp; Add New Student
                </a>
            </div>
        </div>
        <br />

        <div class="row pt-3">
            <div class="col-3">
                <input type="text" id="searchInput" class="form-control" placeholder="Search">
            </div>
        </div>
        <br />

        <div class="row">
            <div class="col-12">
                <p>Total Students: @Model.Count()</p>
            </div>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">GivenName</th>
                    <th scope="col">Surname</th>
                    <th scope="col">PhoneNumber</th>
                    <th scope="col">GroupName</th>
                    @* <th scope="col">Attendance</th> *@
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                    foreach (var item in Model)
                    {
                        <tr class="searchable-row">
                            <th scope="row">@i</th>
                            <td>@item.GivenName</td>
                            <td>@item.Surname</td>
                            <td>@item.PhoneNumber</td>
                            <td>
                                <a asp-controller="Attendance" asp-route-studentId="@item.Id" asp-action="PostAttendance" class="btn btn-primary">
                                    <i class="bi bi-person-lines-fill"></i> Attendance
                                </a>
                            </td>
                            <td>
                                <button class="btn btn-success toggle-attendance" data-student-id="@item.Id" data-is-present="true">
                                    <i class="bi bi-check-circle"></i> Present
                                </button>
                                <button class="btn btn-danger toggle-attendance" data-student-id="@item.Id" data-is-present="false">
                                    <i class="bi bi-x-circle"></i> Absent
                                </button>
                            </td>

                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchable-row").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            $(".toggle-attendance").click(function () {
                var studentId = $(this).data("student-id");
                var isPresent = $(this).data("is-present");

                $.post("/Attendance/UpdateAttendance", { studentId: studentId, isPresent: isPresent }, function (data) {
                    if (data.success) {
                        // Обработка успешного обновления
                        if (isPresent) {
                            // Если отмечено "Present", то изменяем стиль кнопки на "success"
                            $(this).removeClass("btn-success").addClass("btn-secondary");
                        } else {
                            // Если отмечено "Absent", то изменяем стиль кнопки на "danger"
                            $(this).removeClass("btn-danger").addClass("btn-secondary");
                        }
                    } else {
                        // Обработка неудачного обновления, если необходимо
                        alert("Произошла ошибка при обновлении посещаемости.");
                    }
                });
            });

            $("#searchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".searchable-row").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });
        });
    </script>
</body>
</html>
